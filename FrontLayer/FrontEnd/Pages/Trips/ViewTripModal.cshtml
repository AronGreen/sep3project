@model FrontEnd.Pages.Entities.ViewTripModel
<!-- Modal -->

@HtmlHelperPartialExtensions.Partial(Html, "../Account/ReviewAccountModal", @Model.Trip.DriverEmail)

<div class="modal fade" id="@("viewTripModal" + @Model.Trip.Id)" tabindex="-1" role="dialog" aria-labelledby="viewTripModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="viewTripModalLabel">Trip Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <input type="number" name="tripId" value="@Model.Trip.Id" class="invisible" />
                    @if (!@Model.Own)
                    {
                        <div class="form-group">
                            <label>Driver: <a href="favicon.ico./Account/ViewAccount">@Model.Trip.DriverEmail</a></label>
                        </div>
                    }
                    <div class="form-group">
                        <label>Expected arrival time: @Model.Trip.Arrival</label>
                    </div>
                    <div class="form-group">
                        <label>Start address: @Model.Trip.StartAddress</label>
                    </div>
                    <div class="form-group">
                        <label>Destination Address: @Model.Trip.DestinationAddress</label>
                    </div>
                    <div class="form-group">
                        <label>Booking price: @Model.Trip.BasePrice</label>
                    </div>
                    <div class="form-group">
                        <label>Price per kilometer: @Model.Trip.PerKmPrice</label>
                    </div>
                    <div class="form-group">
                        <label>Cancellation fee: @Model.Trip.CancellationFee</label>
                    </div>
                    <div class="form-group">
                        <label>Seats left: @Model.Trip.TotalSeats</label>
                    </div>
                    <div class="form-group">
                        <label>Rules: @Model.Trip.Rules</label>
                    </div>
                    <div class="form-group">
                        <label>Description: @Model.Trip.Description</label>
                    </div>
                    @if (!@Model.Own)
                    {
                        <div class="form-group">
                            <label for="pickupAddressReservation">Pickup Address:</label>
                            <input type="text" class="form-control" name="pickupAddressReservation" id="pickupAddressReservation" placeholder="Pickup Address" />
                        </div>
                        <div class="form-group">
                            <label for="dropoffAddressReservation">Dropoff Address:</label>
                            <input type="text" class="form-control" name="dropoffAddressReservation" id="dropoffAddressReservation" placeholder="Dropoff Address" />
                        </div>
                        <button asp-page-handler="Reserve" class="btn btn-primary">Place Reservation</button>
                        <button type="button" class="btn btn-info" data-toggle="modal" data-target="#reviewAccountModal" data-dismiss="modal">
                            Post Review
                        </button>
                    }
                    else
                    {
                        <button asp-page-handler="Trip" class="btn btn-danger">Delete</button>
                    }
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>