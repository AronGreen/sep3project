@page
@model IndexModel
@{
    ViewData["Title"] = "MainPage";
}

@* TODO: this should be done in a partial *@
@section header{}

<partial name="Shared/_AnimatedLogotype" />

@if (Request.Query["loginFail"].Count > 0)
{
    <div class="alert alert-danger" role="alert">
        Login failed, try again
    </div>
}

@if (Request.Query["accountCreated"].Count > 0)
{
    <div class="alert alert-success" role="alert">
        Account created, ready to log in
    </div>
}
<div align="center" class="container-fluid login-container narrow">

    <form method="post" asp-page-handler="Login">
        <p>
            <span class="input">
                <input type="text" placeholder="Email" class="form-control" name="email" required oninvalid="setCustomValidity('Email field is empty')" oninput="setCustomValidity('')">
                <span></span>
            </span>
        </p>
        <br />
        <p>
            <span class="input">
                <input type="password" placeholder="Password" class="form-control" name="password" required oninvalid="setCustomValidity('Password field is empty')" oninput="setCustomValidity('')">
                <span></span>
            </span>
        </p>
        <div class="form-group">
            <div class="checkbox">
                <label asp-for="RememberMe">
                    <input asp-for="RememberMe" />
                    Remember me
                </label>
            </div>
        </div>
        <br />


        <button type="submit" class="btn btn-info">Log in</button>
    </form>

    <label>Don't have an account?</label>
    <a asp-page="./Account/Register">Register</a>
</div>